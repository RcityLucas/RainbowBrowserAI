# RainbowBrowserAI Environment Configuration
# Copy this file to .env and update with your values

# OpenAI Configuration
# Required for natural language command processing
# Get your API key from: https://platform.openai.com/api-keys
export OPENAI_API_KEY=sk-your-api-key-here

# Budget Configuration
# Daily spending limit in USD
export RAINBOW_DAILY_BUDGET=5.0

# Browser Configuration
# Port for ChromeDriver
export CHROMEDRIVER_PORT=9515

# API Server Configuration
# Port for the REST API and web dashboard
export RAINBOW_API_PORT=3000

# Optional: Advanced Configuration
# export RAINBOW_CONFIG_PATH=/path/to/config.yaml
# export RUST_LOG=rainbow_poc=info
# export RAINBOW_CACHE_DIR=/tmp/rainbow_cache
# export RAINBOW_SCREENSHOT_DIR=screenshots