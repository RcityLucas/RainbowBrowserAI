{
  "name": "News Article Extraction",
  "description": "Extract news article information from web pages",
  "fields": [
    {
      "name": "title",
      "selector": {"css": "h1"},
      "data_type": "string",
      "required": true
    },
    {
      "name": "author",
      "selector": {"css": ".author, [rel='author'], .byline"},
      "data_type": "string",
      "required": false,
      "default_value": "Unknown"
    },
    {
      "name": "publish_date",
      "selector": {"css": "time, .date, .published"},
      "data_type": "datetime",
      "attribute": "datetime",
      "required": false
    },
    {
      "name": "article_url",
      "selector": {"css": "link[rel='canonical']"},
      "data_type": "url",
      "attribute": "href",
      "required": true
    },
    {
      "name": "word_count",
      "selector": {"css": ".content, .article-body, main"},
      "data_type": "integer",
      "required": false
    }
  ],
  "root_selector": null,
  "extract_multiple": false,
  "max_records": null
}